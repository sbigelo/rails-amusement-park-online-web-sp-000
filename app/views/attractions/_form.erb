<%= form_for(attraction) do |f| %>
  <%= f.label :name, 'Ride Name:' %>
  <%= f.text_field :name %><br/><br/>

  <%= f.label :min_height, 'Minimum Height:' %>
  <%= f.number_field :min_height %><br/><br/>

  <%= f.label :happiness_rating, 'Happiness Rating:' %>
  <%= f.number_field :happiness_rating %><br/><br/>

  <%= f.label :nausea_rating, 'Nausea Rating:' %>
  <%= f.number_field :nausea_rating %><br/><br/>

  <%= f.label :tickets, 'Number of Tickets:' %>
  <%= f.number_field :tickets %><br/><br/>

  <%= f.submit class: 'btn btn-primary' %>
<% end %>
