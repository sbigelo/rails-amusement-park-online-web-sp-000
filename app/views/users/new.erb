<h1 class="text-center">Sign Up to Enter Rails Amusement Park</h1>
<%= form_for(@user) do |f| %>
  <%= f.label :name %><br/>
  <%= f.text_field :name %><br/><br/>

  <%= f.label :height, "Height (in inches)"%><br/>
  <%= f.number_field :height %><br/><br/>

  <%= f.label :happiness, "How happy are you? (1-5 scale)" %><br/>
  <%= f.number_field :happiness %><br/><br/>

  <%= f.label :nausea, "How nauseous are you? (1-5 scale)" %><br/>
  <%= f.number_field :nausea %><br/><br/>

  <%= f.label :tickets, "How many dollars in your pocket?" %><br/>
  <%= f.number_field :tickets %><br/><br/>

  <%= f.label :admin, 'Check box if you are a theme park owner' %>
  <%= f.check_box :admin, {class: 'user_admin'}, true, false %><br/><br/>

  <%= f.label :password %><br/>
  <%= f.password_field :password %><br/><br/>

  <%= f.submit 'Create User', class: "btn btn-primary" %>
<% end %>