<h1>Hello, <%= @user.name %></h1>

<% if flash.any? %>
  <p class="alert alert-info"><%= flash[:alert] %></p>
<% end %>
<% if @user.admin %>
  <h3>Logged in as ADMIN</h3>
  
<% else %>
  <h3>Here are your stats:</h3>
  <p><b>Tickets:</b> <%= @user.tickets %></p>
  <p><b>Mood:</b> <%= @user.mood %></p>
  <p><b>Height:</b> <%= @user.height %> inches</p>
<% end %>
<%= link_to 'See attractions', attractions_path %>
<%= link_to 'Log Out', logout_path%>